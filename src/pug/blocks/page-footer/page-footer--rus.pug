extends page-footer__template.pug

block text  
 p.page-footer__text Бронирование номеров в лучшем отеле 2019 года по версии ассоциации «Отельные взгляды».

block lists
 div.page-footer__div.page-footer__lists
   div.page-footer__links
    h3.page-footer__links-title Навигация
    ul.page-footer__list
     each val, index in ['О нас', 'Новости', 'Служба поддержки', 'Услуги']
      li.page-footer__list-item
       a(href='/' + url)= val
   div.page-footer__links
    h3.page-footer__links-title О нас
    ul.page-footer__list
     each val, index in ['О сервисе', 'Наша команда', 'Вакансии', 'Инвесторы']
       li.page-footer__list-item
        a(href='/' + url)= val
   div.page-footer__links
    h3.page-footer__links-title Служба поддержки
    ul.page-footer__list
     each val, index in ['Соглашения', 'Сообщества', 'Связь с нами']
       li.page-footer__list-item
        a(href='/' + url)= val
block subscribe
  div.page-footer__div.page-footer__subscribe
    h3.page-footer__subscribe-title Подписка
    p.page-footer__text Получайте специальные предложения и новости сервиса
    form.page-footer__subscribe-form(method="POST" action="#")
      label(for="subscribe").visually-hidden Your email address
      input#subscribe.page-footer__subscribe-input.form-field(type="email" name="email" placeholder="Your email address")
      button(type='submit' aria-role="button")
